<Window x:Class="MP3_Player.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MP3_Player"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="FBrowse" Content="..." HorizontalAlignment="Left" Margin="353,153,0,0" VerticalAlignment="Top" Width="47" Click="FBrowse_Click"/>
        <Label x:Name="Find_FileL" Content="Select a MP3 file" HorizontalAlignment="Left" Margin="202,111,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="F_Path" HorizontalAlignment="Left" Margin="202,154,0,0" Text="FilePath" VerticalAlignment="Top" Width="120" TextChanged="F_Path_TextChanged" IsEnabled="False"/>
        <Button x:Name="PlayB" Content="Play" HorizontalAlignment="Left" Margin="283,197,0,0" VerticalAlignment="Top" Width="66" Click="PlayB_Click"/>
    </Grid>
</Window>
