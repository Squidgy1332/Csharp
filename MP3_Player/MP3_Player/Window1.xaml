<Window x:Class="MP3_Player.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MP3_Player"
        mc:Ignorable="d"
        Title="Player" Height="172" Width="800">
    <Grid>
        <Button x:Name="PlayB" Content="Play" HorizontalAlignment="Left" Margin="322,108,0,0" VerticalAlignment="Top" Click="PlayB_Click" Width="58"/>
        <Button x:Name="StopB" Content="Stop" HorizontalAlignment="Left" Margin="429,108,0,0" VerticalAlignment="Top" Click="StopB_Click" Width="58"/>
        <ProgressBar x:Name="MusicProgBar" HorizontalAlignment="Left" Height="9" Margin="65,69,0,0" VerticalAlignment="Top" Width="630" ValueChanged="MusicProgBar_ValueChanged"/>
        <MediaElement x:Name="MusicElement" HorizontalAlignment="Left" Height="100" Margin="695,21,0,0" VerticalAlignment="Top" Width="100"/>

    </Grid>
</Window>
