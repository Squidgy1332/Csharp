<UserControl x:Class="MP3_Player.Start_Stop"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Button x:Name="PlayB" Content="Play" HorizontalAlignment="Left" Margin="202,354,0,0" VerticalAlignment="Top" Width="66" Command="MediaCommands.Play" Click="PlayB_Click"/>
        <Button x:Name="StopB" Content="Stop" HorizontalAlignment="Left" Margin="353,354,0,0" VerticalAlignment="Top" Width="66" Command="MediaCommands.Stop" Click="StopB_Click"/>
    </Grid>
</UserControl>
